<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/show_set_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true" />

        <Button
            android:id="@+id/button_set_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户端修改名字-更新到服务端"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_get_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取服务端修改的名字"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/show_get_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_set_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置第一次打开"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>